= image_tag('Background.png', class: 'bg black-bg')
.row
	.title-text-bottles.text-center		
		= label_tag nil, 'Actualmente ten√©s ', class: 'bottle-title'
	    = label_tag nil, @bottles, class: 'bottle-title-number bottle-title blue-5-label'
	    = label_tag nil, ' botellas acumuladas', class: 'bottle-title white-label'
.row.text-center
	.value-subtitle
		= label_tag nil, 'Valor sugerido', class: 'white-label h1'
	    = label_tag nil, " $#{@value}", class: 'blue-5-label h1 strong'

.row.text-center
	= label_tag nil, 'Canjealas por:', class: 'trade-them-for-subtitle'

.row
	.col-md-offset-1.col-md-10
		.col-md-4
			.box.black-box
				.text-center.box-header
					= label_tag nil, " $#{@discount_value}", class: 'blue-5-label'
					br
					= label_tag nil, 'en alguno de estos medios', class: 'white-label'
		.col-md-4
			.box.blue-box
				.text-center.box-header
					= label_tag nil, " $#{@bottles_value}", class: 'blue-7-label'
					br
					= label_tag nil, 'en cervezas ABInBev', class: 'white-label'
					= label_tag nil, '(Quilmes, Imperial, Andes, Budweiser, Brahma, Stella Artois, Corona)', class: 'white-label'
		.col-md-4
			.box.black-box
				.text-center.box-header.flex
						= label_tag nil, 'O por alguno de estos premios', class: 'header'
