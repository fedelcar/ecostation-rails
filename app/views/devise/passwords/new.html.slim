#sign-in
  = image_tag("im3.jpg", class: 'bg')
  .form-basic
    .row.no-margin
      .col-md-12.text-center.sign-up-form
        .section-title.text-center
          = label_tag nil, 'Recuperar contraseña'
      .col-md-8.col-md-offset-2
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          div
            = f.label :usuario, class: 'form-label login-label green-label'
            .text-center
              = f.email_field :email, class: 'input form-input form-login'
          .link.blue.text-center
            = render "devise/shared/links"
          div.text-center
            = f.submit 'Recuperar contraseña', class: 'btn button-general green-button submit-button full-width-btn'
