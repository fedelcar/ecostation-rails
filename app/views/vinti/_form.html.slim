#sign-in
  = image_tag("im3.jpg", class: 'bg')
  .form-basic.transparent
    .row.no-margin
      .col-md-12.sign-up-form.transparent
        .section-title.text-center.retirar-dineros.bottle-title.blue-5-label
          = label_tag nil, 'Retirar tu dinero'
        .row
          = image_tag "vinti.png", class: 'vinti-img'
      .col-md-8.col-md-offset-2
        = form_tag(controller: 'vinti', action: 'create')
          .text-left
            = label_tag nil, "Usuario de vinti", class: 'form-label login-label green-label text-left'
            .text-center
              = text_field_tag :user, nil, class: 'form-input input form-login'
          .text-left
            = label_tag nil, "Se acreditar√°n $#{@money}", class: 'form-label login-label green-label text-left'
          div.text-center
            .actions = submit_tag 'Retirar', class: 'btn button-general green-button submit-button full vinti-button'
